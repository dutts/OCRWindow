<controls:CloseAwareWindow x:Class="OCRWindow.Controls.AreaSelectionOverlay.AreaSelectionOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:OCRWindow.Controls"
        xmlns:areaSelectionOverlay="clr-namespace:OCRWindow.Controls.AreaSelectionOverlay"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        Opacity="0.5"
        areaSelectionOverlay:DesiredWindowPosition.DesiredTop="{Binding WindowPosTop}"
        areaSelectionOverlay:DesiredWindowPosition.DesiredLeft="{Binding WindowPosLeft}"
        areaSelectionOverlay:DesiredWindowPosition.DesiredWidth="{Binding WindowWidth}"
        areaSelectionOverlay:DesiredWindowPosition.DesiredHeight="{Binding WindowHeight}"
        IsHitTestVisible="True">
    <Canvas>
        
    </Canvas>
</controls:CloseAwareWindow>
